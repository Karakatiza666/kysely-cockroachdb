{
   "compilerOptions": {
      "target": "ES2018",
      "module": "es6",
      "lib": ["ES2018", "ES2018.AsyncIterable", "DOM"],
      "declaration": true,
      "outDir": "dist",
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
         "./src/*": [ "./src/*" ]
      }
   },
   "include": [
     "./src/**/*",
     "./index.ts"
   ],
   "tsc-alias": {
     "resolveFullPaths": true
   }
}